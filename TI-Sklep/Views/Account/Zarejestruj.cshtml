@model TI_Sklep.ViewModels.RegisterViewModels

<h1>Rejestracja</h1>

<p>
    @ViewBag.message
</p>
<p>
    @Html.ValidationSummary()
</p>

@using (Html.BeginForm("Zarejestruj", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email, "Podaj email: ")
        @Html.TextBoxFor(m => m.Email, new { @required = true, @class = "form-control" })
    </div>
    <p class="alert-warning">
        @Html.ValidationMessageFor(m => m.Email)
    </p>

    <div class="form-group">
        @Html.LabelFor(m => m.UserName, "Podaj login: ")
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
    </div>
    <p class="alert-warning">
        @Html.ValidationMessageFor(m => m.UserName)
    </p>

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, "Podaj imię: ")
        @Html.TextAreaFor(m => m.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName, "Podaj nazwisko: ")
        @Html.TextAreaFor(m => m.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, "Podaj hasło: ")
        @Html.TextAreaFor(m => m.Password, new { @class = "form-control", type = "password" })
    </div>
    <p class="alert-warning">
        @Html.ValidationMessageFor(m => m.Password)
    </p>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, "Powtórz hasło: ")
        @Html.TextAreaFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password" })
    </div>
    <p class="alert-warning">
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </p>
    <div class="form-group"><input type="submit" value="Zarejestruj" class="btn btn-primary" /></div>
}


@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}